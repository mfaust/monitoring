#     APPLICATION="cm7-caefeeder-preview"
#   elif [[ ${HOSTNAME} =~ .*cae.* ]]
#   then
#     # - cae, caeguj, caeprev
#     if [[ ${HOSTNAME} =~ .*caeprev-.* ]]
#     then
#       # PREVIEW Tomcat
#       PORT="${PREVIEW_RMI_REG}"
#       APPLICATION="cm7-qac-preview"
#     elif [[ ${HOSTNAME} =~ .*caeguj-.* ]]
#     then
#       # QAC CAE
#       PORT="${CAE_RMI_REG}"
#       APPLICATION="cm7-qac-delivery"
#     else
#       # 'Standard' CAE
#       PORT="${CAE_RMI_REG}"
#       APPLICATION="cm7-cae"
#     fi
#   elif [[ ${HOSTNAME} =~ .*importer.* ]]
